{
  "name": "project-a",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/project-a",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{workspaceRoot}/dist/apps/project-a"],
      "options": {
        "outputPath": "dist/apps/project-a"
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "project-a:build",
        "dev": true,
        "port": 3000
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next dev -p 3000",
        "cwd": "apps/project-a"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/project-a/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/project-a"],
      "options": {
        "jestConfig": "apps/project-a/jest.config.js"
      }
    }
  }
}
